echo -e "Updating\n"

sudo apt-get update

echo -e "Installing UFW\n"

sudo apt-get install -y ufw

echo -e "configure UFW...\n"

#Outgoing and Deny
sudo ufw default deny incoming
sudo ufw default allow outgoing

#Ports
sudo ufw allow 22
sudo ufw allow 80
sudo ufw allow 443

# Enable
sudo ufw enable

echo -e "Process Completed...\n"
